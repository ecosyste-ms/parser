<div class="col-lg-4 container-sm text-center">
  <form class="row g-2 justify-content-center" action='<%= api_v1_jobs_path %>' method="post">
    <div class="col-auto">
      <label for="repo_name" class="visually-hidden">Tarball URL</label>
      <input name='url' type="text" class="form-control" id="repo_name" placeholder="URL: eg https://github.com/ecosyste-ms/digest/archive/refs/heads/main.zip" size="50">
    </div>
    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Parse</button>
    </div>
  </form>
</div>

<div class="container-sm col-lg-6 mt-4">
  <h4 class='mb-3'>Supported ecosystems and file formats:</h4>
  <% @formats.each do |ecosystem, files| %>
    <div class="card mb-3 registry d-flex">
      <div class="card-body pb-1">
        <div class="d-flex">
          
          <div class="flex-grow-1 ms-3 text-break">
            <h5 class='card-title'>
              <%= ecosystem %>
            </h5>
          
            <p class="card-subtitle mb-2 text-muted">
              <%= files.to_sentence %>
            </p>
          </div>
          <div class="flex-shrink-0">
           
          </div>  
        </div>
      </div>
    </div>
  <% end %>
</div>